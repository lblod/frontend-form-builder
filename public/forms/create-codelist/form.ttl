@prefix form: <http://lblod.data.gift/vocabularies/forms/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix mu: <http://mu.semte.ch/vocabularies/core/> .
@prefix displayTypes: <http://lblod.data.gift/display-types/> .
@prefix ext: <http://mu.semte.ch/vocabularies/ext/> .
@prefix schema: <http://schema.org/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix nie: <http://www.semanticdesktop.org/ontologies/2007/01/19/nie#> .
@prefix fieldGroups: <http://data.lblod.info/field-groups/> .
@prefix fields: <http://data.lblod.info/fields/> .
@prefix concept: <http://lblod.data.gift/concept-schemes/> .

##########################################################
# Form
##########################################################
ext:form a form:Form, form:TopLevelForm ;
  form:includes ext:listName,
                ext:listNodesL .

##########################################################
#  Property-groups
##########################################################
ext:parentPG a form:PropertyGroup;
  sh:name "" ;
  sh:order 1 .

ext:itemPG a form:PropertyGroup;
  sh:name "" ;
  sh:order 2 .

##########################################################
#  List name field
##########################################################
ext:listName a form:Field ;
  sh:name "Name of list" ;
  sh:order 1 ;
  sh:path sh:name ;
  form:displayType displayTypes:defaultInput ;
  sh:group ext:parentPG .

ext:listNodesS a form:Scope;
  sh:path form:includes.

ext:listNodesL a form:Listing;
  form:each ext:listNodesItem ;
  form:scope ext:listNodesS ;
  form:createGenerator ext:listItemNodeGenerator ;
  form:canAdd true ;
  form:addLabel "Add item";
  form:canRemove true ;
  form:removeLabel "Remove item" ;
  form:canChangeOrder false ;
  sh:group ext:parentPG ;
  sh:order 2 .

ext:listNodesItem a form:SubForm ;
  form:includes ext:listItem ;
  form:hasFieldGroup ext:itemPG .

ext:listItem a form:Field ;
  sh:name "Item" ;
  sh:order 1 ;
  sh:path sh:name ;
  form:displayType displayTypes:defaultInput ;
  sh:group ext:itemPG .

ext:listItemNodeGenerator a form:Generator;
  form:prototype [
    form:shape [
      a form:Field ;
      sh:name "Item";
      sh:path [];
      form:displayType displayTypes:defaultInput
    ]
  ] .
