<AuModal
  @modalOpen={{true}}
  @closeModal={{this.close}}
  data-test-confirm-deletion-modal="modal"
>
  <:title>{{t "confirmation.deleteTitle"}}</:title>
  <:body>
    {{t "confirmation.deleteQuestion"}}
  </:body>
  <:footer>
    <AuButtonGroup>
      <AuButton
        @icon="bin"
        @iconAlignment="left"
        @alert={{true}}
        @disabled={{this.delete.isRunning}}
        @loading={{this.delete.isRunning}}
        @loadingMessage={{t "messages.feedback.isDeleting"}}
        {{on "click" (perform this.delete)}}
        data-test-confirm-deletion-modal="delete-button"
      >
        {{t "crud.delete"}}
      </AuButton>
      <AuButton
        @skin="secondary"
        @disabled={{this.delete.isRunning}}
        {{on "click" this.close}}
        data-test-confirm-deletion-modal="cancel-button"
      >
        {{t "crud.cancel"}}
      </AuButton>
    </AuButtonGroup>
  </:footer>
</AuModal>