{{page-title "Editor"}}

<Toolbar
  @model={{this.model.generatedForm}}
  @code={{this.formCode}}
  @formChanged={{this.formChanged}}
  @onCodeChange={{this.handleCodeChange}}
  @setFormChanged={{this.setFormChanged}}
/>

<main class="au-c-main-container formbuilder-editor">
  <div class="formbuilder-editor__main-side-bar">
    <AuButton
      class="formbuilder-editor__main-side-bar--first-button"
      @skin="secondary"
      @icon="plus"
      @hideText={{true}}
    >
      {{this.text}}
    </AuButton>
    <AuButton @skin="naked" @icon="folder" @hideText={{true}} />
    <AuButton @skin="naked" @icon="link-external" @hideText={{true}} />
  </div>
  <div class="formbuilder-editor__side-bar formbuilder-editor__side-bar--left">
    <div class="formbuilder-editor__side-bar--title">
      <span>Basis elementen</span>
    </div>
    <div class="formbuilder-editor__side-bar--big-elements-in-grid">
      {{#each this.sortedBasicElements as |basicElement|}}
        <div class="formbuilder-editor__side-bar--clickable-element">
          {{basicElement.label}}
        </div>
      {{/each}}
    </div>
    {{! <div class="au-u-margin-left au-u-margin-right">
      <AuHr />
    </div> }}
  </div>
  <div class="formbuilder-editor__main">
    <Editor::BuildingView @formTtl={{this.formCode}} />
  </div>
  <div
    class="formbuilder-editor__side-bar formbuilder-editor__side-bar--right"
  ></div>
</main>