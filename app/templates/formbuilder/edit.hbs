{{page-title "Edit"}}

<Toolbar
  @model={{this.model.generatedForm}}
  @code={{this.formCode}}
  @formChanged={{this.formChanged}}
  @onCodeChange={{this.handleCodeChange}}
  @setFormChanged={{this.setFormChanged}}
/>

<AuBodyContainer class="formBuilderEdit__actionsWithOutlet">
  <AuTabs
    class="formBuilderEdit__actionsNav"
    @reversed={{this.reversed}}
    as |Tab|
  >
    <Tab>
      <AuLink
        @route="formbuilder.edit.code"
        @icon="html"
        @hideText={{true}}
      >Code</AuLink>
    </Tab>
    <Tab>
      <AuLink
        @route="formbuilder.edit.builder"
        @icon="document"
        @hideText={{true}}
      >Builder</AuLink>
    </Tab>
    <Tab>
      <AuLink
        @route="formbuilder.edit.validations"
        @icon="website"
        @hideText={{true}}
      >Validations</AuLink>
    </Tab>

  </AuTabs>
  {{outlet}}
</AuBodyContainer>