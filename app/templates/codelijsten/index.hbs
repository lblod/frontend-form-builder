{{page-title "Concept schemes"}}

<AuToolbar @size="medium" @skin="tint" @border="bottom" as |Group|>
  <Group>
    <ul class="au-c-list-horizontal au-c-list-horizontal--small">
      <li class="au-c-list-horizontal__item">
        <AuButton
          @skin="link"
          @icon="arrow-left"
          @iconAlignment="left"
          {{on "click" this.routeToFormWithId}}
        >{{this.routeLabel}}</AuButton>
      </li>
      <li class="au-c-list-horizontal__item">
        {{t "navigation.tabs.codelists"}}
      </li>
    </ul>
  </Group>
</AuToolbar>

<div class="au-c-toolbar--bottom au-c-toolbar--large codelists-header">
  <div class="au-c-toolbar__group">
    <AuHeading @level="1" @skin="2">
      {{t "navigation.tabs.codelists"}}
    </AuHeading>
  </div>
  <div class="codelists-header__createAndSearch">
    {{#if this.features.CAN_CREATE_OWN_CODELIST}}
      <AuLink
        class="au-u-margin-left-large"
        @route="codelijsten.new"
        @skin="button"
        @icon="plus"
        @iconAlignment="left"
      >{{t "codelists.createCodelist"}}</AuLink>
    {{/if}}
    <AuInput
      placeholder={{t "codelists.searchPlaceholder"}}
      @icon="search"
      @iconAlignment="left"
      @width="block"
      id="input-searchCodelist"
      value={{this.searchValue}}
      {{on "change" this.searchCodelist}}
    />
  </div>
</div>

<div class="au-c-main-container__content codelijsten__scroll">
  <AuTable class="au-u-margin-bottom-small">
    <:header>
      <tr>
        <th>{{t "table.columns.name"}}</th>
        <th>{{t "table.columns.id"}}</th>
        <th></th>
      </tr>
    </:header>
    <:body>
      {{#each this.model as |conceptScheme|}}
        <tr>
          <td class="au-u-visible-medium-up au-u-word-break">
            <AuLink
              @route="codelijsten.edit"
              @model={{conceptScheme.id}}
              @ariaHidden={{true}}
            >{{conceptScheme.label}}</AuLink>
          </td>
          <td class="au-u-visible-medium-up">{{conceptScheme.id}}</td>
          <td>
            {{#if conceptScheme.isPublic}}
              <AuPill
                @skin="success"
                @icon="info-circle"
                @iconAlignment="left"
              >{{t "codelists.types.isPublic"}}
              </AuPill>
              {{#if conceptScheme.isArchived}}
                <AuPill
                  @skin="default"
                  @icon="archive"
                  @iconAlignment="left"
                >{{t "codelists.types.isArchived"}}
                </AuPill>
              {{/if}}
            {{else}}
              <AuPill
                @skin="warning"
                @icon="info-circle"
                @iconAlignment="left"
              >{{t "codelists.types.isPrivate"}}
              </AuPill>
            {{/if}}
          </td>
        </tr>
      {{/each}}
    </:body>
  </AuTable>
</div>

{{outlet}}