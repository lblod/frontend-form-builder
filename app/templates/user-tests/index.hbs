<div class="au-c-toolbar  au-c-toolbar--bottom  au-c-toolbar--large ">
  <div class="au-c-toolbar__group">

    <AuHeading @level="1" @skin="2">
      Aangemaakte testbare semantische formulieren
    </AuHeading>
  </div>
  <div class="au-c-toolbar__group">
    <AuLink @route="index" @skin="button-secondary" @icon="arrow-left">
      Terug naar overzicht formulieren
    </AuLink>
  </div>
</div>

<main id="main" class="au-c-main-container">
  <div class="au-c-main-container__content">
    <div class="au-c-body-container">
      <AuDataTable @content={{this.model}} @isLoading={{this.isLoading}} noDataMessage="Geen gebruiker-testen gevonden"
                   @sort={{this.sort}} @page={{this.page}} @size={{this.size}}
                   class="container-flex--contain" as |t|>
        <t.content as |c|>
          <c.header>
            <AuDataTableThSortable @label='Formulier' @field='form.label' @currentSorting={{this.sort}}
                                   class="au-u-visible-small-up"/>
            <AuDataTableThSortable @label='Beschrijving' @field='form.comment' @currentSorting={{this.sort}}
              class="au-u-visible-medium-up" />
            <AuDataTableThSortable @label='Aangemaakt' @field='created' @currentSorting={{this.sort}}
                                   class="au-u-visible-small-up"/>
            <AuDataTableThSortable @label='Gewijzigd' @field='modified' @currentSorting={{this.sort}}
                                   class="au-u-visible-small-up"/>
            <th>Acties</th>
          </c.header>
          <c.body as |row|>
            <td class="au-u-visible-medium-up">{{row.form.label}}</td>
            <td class="au-u-visible-medium-up">{{row.form.comment}}</td>
            <td class="au-u-visible-medium-up">{{format-date row.created}}</td>
            <td class="au-u-visible-medium-up">{{format-date-time row.modified}}</td>
            <td class="au-u-visible-medium-up">
              <AuLink @route="user-tests.edit" @icon="user-popup" @iconAlignment="left" @model={{row.id}}>Test</AuLink>
            </td>
          </c.body>
        </t.content>
      </AuDataTable>
    </div>
  </div>
</main>
